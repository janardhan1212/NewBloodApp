<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_marginLeft="@dimen/dimen36"
        android:layout_marginRight="@dimen/dimen36"
        app:cardElevation="3dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:contentPadding="10dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical">


            <com.rey.material.widget.EditText
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:layout_centerHorizontal="true"
                app:et_labelPadding="8dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textSize="15sp"
                app:et_dividerPadding="8dp"
                android:editable="false"
                app:et_inputId="@+id/textfield_et_label_input"
                app:et_supportMode="none"
                style="@style/LightEditText"
                android:inputType="text" />

            <com.rey.material.widget.EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_centerHorizontal="true"
                app:et_labelPadding="8dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textSize="15sp"
                app:et_dividerPadding="8dp"
                android:editable="false"
                app:et_inputId="@+id/textfield_et_label_input"
                app:et_supportMode="none"
                style="@style/LightEditText"
                android:inputType="textEmailAddress" />
            <com.rey.material.widget.EditText
                android:id="@+id/phno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="phno"
                android:layout_centerHorizontal="true"
                app:et_labelPadding="8dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textSize="15sp"
                app:et_dividerPadding="8dp"
                android:editable="false"
                app:et_inputId="@+id/textfield_et_label_input"
                app:et_supportMode="none"
                style="@style/LightEditText"
                android:inputType="phone" />
            <com.rey.material.widget.Spinner
                android:id="@+id/spinner_label"
                android:padding="@dimen/dimen8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"


                app:spn_label="Select Blood group"
                app:spn_arrowColor="@color/colorControlNormal"
             />
            <com.bloodtolife.bloodapp.utils.p_MyCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorControlNormal"
                android:text="By submiting you agree to the terms and conditions "/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
